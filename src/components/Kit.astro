---
import Buttom from "./Buttom.astro";

interface Props {
    img: string
    title: string
    url: string
}

const {img, title, url} = Astro.props

---

<div class="flex flex-col max-w-[350px] items-center gap-5">
    <h3 class=" font-bold text-lg ">{title}</h3>
    <img src={img} class="rounded-md" />
    <Buttom url={url}>
        Descargar
    </Buttom>
</div>